<p id="notice"><%= notice %></p>

<h1>Camps</h1>

<table>
  <thead>
    <tr>
      <th>Curriculum</th>
      <th>Location</th>
      <th>Cost</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Time slot</th>
      <th>Max students</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camps.each do |camp| %>
      <tr>
        <td><%= camp.curriculum_id %></td>
        <td><%= camp.location_id %></td>
        <td><%= camp.cost %></td>
        <td><%= camp.start_date %></td>
        <td><%= camp.end_date %></td>
        <td><%= camp.time_slot %></td>
        <td><%= camp.max_students %></td>
        <td><%= camp.active %></td>
        <td><%= link_to 'Show', camp %></td>
        <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
        <td><%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

